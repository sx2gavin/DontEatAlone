<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/matches_distance"
        android:layout_width="@dimen/linear_layout_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading_font_size"
        android:layout_margin="@dimen/activity_layout_margin"/>

    <TextView
        android:id="@+id/matches_time"
        android:layout_width="@dimen/linear_layout_width"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_meetup"
        android:textSize="@dimen/heading_font_size"
        android:layout_margin="@dimen/activity_layout_margin"/>

    <TextView
        android:id="@+id/matches_price"
        android:layout_width="@dimen/linear_layout_width"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_meetup"
        android:textSize="@dimen/heading_font_size"
        android:layout_margin="@dimen/activity_layout_margin"/>

    <TextView
        android:id="@+id/matches_comment"
        android:layout_width="@dimen/linear_layout_width"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_meetup"
        android:textSize="@dimen/heading_font_size"
        android:layout_margin="@dimen/activity_layout_margin"/>

</LinearLayout>